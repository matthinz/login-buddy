doctype html
html(lang="en")
  head
    link(
      href=`${publicPath}/style.css?${cacheBuster}`,
      type="text/css",
      rel="stylesheet"
    )
  body.toolbar
    form(method="post", action=commandPath)
      input(type="hidden", name="frame_id", value=frameId)
      if lastSignup && loggedIn
        p
          span= lastSignup.email
          button(type="submit", name="command", value="logout") Sign out
      else if lastSignup && !loggedIn
        p
          span= lastSignup.email
          button(type="submit", name="command", value="login") Sign in
          button(type="submit", name="command", value="signup") Sign up again
      else
        button(type="submit", name="command", value="signup") Sign up
    script(src=`${publicPath}/script.js?${cacheBuster}`)
